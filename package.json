{
    "name": "snippetier",
    "displayName": "Snippetier",
    "description": "Create code snippets from the editor selection",
    "version": "1.0.0",
    "publisher": "dafanasev",
    "license": "MIT",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Languages",
        "Snippets",
        "Other"
    ],
    "keywords": [
        "snippets"
    ],
    "activationEvents": [
        "onCommand:extension.createSnippet"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.createSnippet",
                "title": "Create Snippet"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "extension.createSnippet",
                    "when": "editorHasSelection"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    },
    "dependencies": {
        "hjson": "^3.1.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/dafanasev/vscode-snippetier.git"
    },
    "homepage": "https://github.com/dafanasev/vscode-snippetier/blob/master/README.md"

}
